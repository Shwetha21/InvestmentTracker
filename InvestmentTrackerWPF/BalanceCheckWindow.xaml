<Window x:Class="InvestmentTrackerWPF.BalanceCheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvestmentTrackerWPF"
        mc:Ignorable="d"
        Title="BalanceCheckWindow" Height="150" Width="200">
    <Grid>
        <Button Content="Back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Background="#FF989BD4" Click="Back_Button_Click"/>
        <Label Content="Balance" HorizontalAlignment="Left" Margin="24,0,0,0" VerticalAlignment="Center" Background="#FFC7CDDE" Height="26"/>
        <TextBox x:Name="TextBalance" HorizontalAlignment="Left" Margin="75,0,0,0"  TextWrapping="Wrap" VerticalAlignment="Center" Width="79" Height="26" Background="#FFB4D5DE"/>
    </Grid>
</Window>
